<%- model_class = Settings -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:ban_time) %>:</strong></dt>
  <dd><%= @setting.ban_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_updated) %>:</strong></dt>
  <dd><%= @setting.last_updated %></dd>
  <dt><strong><%= model_class.human_attribute_name(:allowed_error) %>:</strong></dt>
  <dd><%= @setting.allowed_error %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rate) %>:</strong></dt>
  <dd><%= @setting.rate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:update_time) %>:</strong></dt>
  <dd><%= @setting.update_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @setting.user_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              settings_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_setting_path(@settings), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              setting_path(@settings),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
