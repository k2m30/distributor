<%- model_class = Settings -%>
<div class="page-header">
  <h1>Настройки</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:ban_time) %>:</strong></dt>
  <dd><%= @setting.ban_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_updated) %>:</strong></dt>
  <dd><%= @setting.last_updated %></dd>
  <dt><strong><%= model_class.human_attribute_name(:allowed_error) %>:</strong></dt>
  <dd><%= @setting.allowed_error %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rate) %>:</strong></dt>
  <dd><%= @setting.rate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:update_time) %>:</strong></dt>
  <dd><%= @setting.group.name %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t('helpers.links.back')),
              settings_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t('helpers.links.edit')),
              edit_setting_path(@setting.id), :class => 'btn' %>

</div>
