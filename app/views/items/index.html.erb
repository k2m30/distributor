<%- model_class = Item -%>
<div class="page-header">
  <h3>Позиции</h3>
</div>

<%= link_to 'Удалить ошибки в названиях', refine_items_items_path, :class => 'btn btn-primary' %>


<table class="table table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:id) %></th>
    <th><%= model_class.human_attribute_name(:name) %></th>
    <th><%= model_class.human_attribute_name(:group_id) %></th>
    <th><%= model_class.human_attribute_name(:created_at) %></th>
  </tr>
  </thead>
  <tbody>
  <% @items.each do |item| %>
      <tr>
        <td><%= link_to item.id, item_path(item) %></td>
        <td><%= item.name %></td>
        <td><%= item.group_id %></td>
        <td><%= item.created_at.to_formatted_s(:short) %></td>
      </tr>
  <% end %>
  </tbody>
</table>