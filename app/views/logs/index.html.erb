<%- model_class = Log -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:price_found) %></th>
      <th><%= model_class.human_attribute_name(:css) %></th>
      <th><%= model_class.human_attribute_name(:name_found) %></th>
      <th><%= model_class.human_attribute_name(:css_name) %></th>
      <th><%= model_class.human_attribute_name(:log_type) %></th>

      <th><%= model_class.human_attribute_name(:item) %></th>
      <th><%= model_class.human_attribute_name(:site) %></th>

      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @logs.each do |log| %>
      <%= render :partial => 'log_row' %>
    <% end %>
  </tbody>
</table>

<%= link_to "Очистить лог", clear_log_logs_path, :class => 'btn' %>
