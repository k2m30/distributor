<!DOCTYPE html>
<html>
<head>
  <title>B2B Soft</title>
  <!--[if lt IE 9]>
  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0 user-scalable=yes">
</head>
<body>

<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container-fluid">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>

      <%= link_to "B2B Soft", root_path, class: "brand" %>



      <div class="nav-collapse">
        <ul class="nav">
			<% if user_signed_in? %>
				<%# current_user.groups.each do |group|  %>
        <% Group.all.each do |group|  %>
			
				<li><%= link_to group.name, group_path(group) %></li>
				<% end %>
			<% end %>
          <li><%= link_to (t "nav.stoplist"), stop_list_sites_path %></li>
          <li><%= link_to (t "nav.sites"), sites_path %></li>
          <li><%= link_to (t "nav.urls"), urls_path %></li>
          <li><%= link_to (t "nav.settings"), settings_path %></li>

          <% if user_signed_in? %>
              <li><%= link_to((t 'nav.logout'), destroy_user_session_path, :method => :delete) %></li>
          <% else %>
              <li><%= link_to(t('nav.login'), new_user_session_path) %></li>

          <% end %>

        </ul>
      </div>
    </div>
  </div>
</div>


<div class="container-fluid">
  <div class="row-fluid">
    <% flash.each do |name, msg| %>
        <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
          <button type="button" class="close"
                  data-dismiss="alert">&times;</button> <%= msg %> </div>
    <% end %>


    <%= yield %>

  </div>
</div>

</body>
</html>
