<%- model_class = Site -%>
<div class="page-header">
  <h2>Стоп лист</h2>
</div>

<% @sites.each do |site| %>
    <%= cache(site) do %>
        <%- group_name = site.groups[0].name %>
        <table class="table table-striped">
          <tbody>
          <tr>
            <td><%= site.company_name %></td>
            <td><%= link_to site.name, site_path(site) %></td>
            <td>email: <%= site.email %></td>
            <td>В стоплисте еще <%= distance_of_time_in_words_to_now(site.out_of_ban_time) %></td>
          </tr>
          </tbody>
        </table>

        <table class="table table-striped">
          <thead>
          <tr>
            <th>Бренд</th>
            <th>Позиция</th>
            <th style="white-space: nowrap; text-align: right">Цена сайта</th>
            <th style="white-space: nowrap; text-align: right">Эталон</th>
            <th style="white-space: nowrap; text-align: right">Разница, руб.</th>
            <th style="white-space: nowrap; text-align: right">Разница, %</th>
          </tr>
          </thead>
          <tbody>
          <% @groups.each do |group| %>
              <%- standard_site = group.sites.where(standard: true).first %>
              <%- items = (site.items & group.items).sort_by { |item| item.name } %>
              <% items.each do |item| %>
                  <% (site.urls.where(violator: true) & item.urls).each do |url| %>
                      <%- name = item.name %>
                      <%- price = url.price %>
                      <%- url_url = url.url %>
                      <%- standard_url = (url.item.urls & standard_site.urls).first %>
                      <tr>
                        <td><%= group.name %></td>
                        <td><%= name %></td>
                        <td style="white-space: nowrap; text-align: right"><%= link_to spaces(price), url_url, target: "_blank" %></td>

                        <% if !standard_url.nil? %>
                            <%- standard_url_url = standard_url.url %>
                            <%- standard_url_price = standard_url.price %>
                            <td style="white-space: nowrap; text-align: right"><%= link_to spaces(standard_url_price), standard_url_url, target: "_blank" %></td>
                            <td style="white-space: nowrap; text-align: right"><%= spaces(standard_url_price - price) %></td>
                            <td style="white-space: nowrap; text-align: right"><%= "%.1f" % ((standard_url_price/price - 1)*100) %>%</td>
                        <% end %>
                      </tr>
                  <% end %>
              <% end %>
          <% end %>

          </tr>

          </tbody>
        </table>
        <hr>
        <br>
        <br>
        <br>
        <br>
        <br>
    <% end %>
<% end %>