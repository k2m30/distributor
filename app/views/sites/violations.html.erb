<%- model_class = Site -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @site.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:company_name) %>:</strong></dt>
  <dd> <%= @site.company_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd> <%= @site.email %></dd>
</dl>

<table class="table table-condensed">
	<th>Позиция</th>
	<th>Цена сайта</th>
	<th>Эталон</th>
	<th>Дельта</th>

<% @violating_urls.each do |url| %>
<tr>
	<td><%= url.item.name %></td>
	<td><%= link_to spaces(url.price), url.url %></td>
	<%- standard_url = (@standard_site.urls & url.item.urls).first  %>
	<td><%= link_to spaces(standard_url.price), standard_url.url %></td>
	<td><%= '%.1f' % ((standard_url.price/url.price - 1)*100) %>%</td>

</tr>
<% end %>
</table>

<div class="form-actions">
  <%= link_to t('.back', :default => t('helpers.links.back')),
              sites_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t('helpers.links.edit')),
              edit_site_path(@site), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t('helpers.links.destroy')),
              site_path(@site),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t('helpers.links.confirm', :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
