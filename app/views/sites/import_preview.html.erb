<%- model_class = Site -%>
<div class="page-header">
  <h2><%= current_user.username %></h2>
</div>

<% if current_user.admin? %>
    <table class="table table-striped">
      <thead>
        <% @header.each do |th| %>
            <th><%= th %></th>
        <% end %>
      </thead>
      <tbody>
         <% @rows.each do |tr|  %>
            <tr>
              <% tr.each do |td| %>
                <td><%= td %></td>
              <% end %>
            </tr>
         <% end  %>
      </tbody>
    </table>

    <%= link_to "Импорт", new_site_path, :class => 'btn btn-primary' %>

<% end %>
